<!doctype html>
<html>
<head>
    <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>ProtechField Invoice-C</title>
    
    <style>
    .invoice-box {
        max-width: 800px;
        margin: auto;
        margin-top:7%;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, .15);
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
        background-color:white;
    }
    
    .invoice-box table {
        width: 100%;
        line-height: inherit;
        text-align: left;
    }
    
    .invoice-box table td {
        padding: 5px;
        vertical-align: top;
    }
    
    .invoice-box table tr td:nth-child(2) {
        text-align: right;
    }
    
    .invoice-box table tr.top table td {
        padding-bottom: 20px;
    }
    
    .invoice-box table tr.top table td.title {
        font-size: 20px;
        line-height: 45px;
        color: #333;
    }
    
    .invoice-box table tr.information table td {
        padding-bottom: 40px;
    }
    
    .invoice-box table tr.heading td {
        border-bottom: 1px solid #ddd;
        font-weight: bold;
    }
    
    .invoice-box table tr.details td {
        padding-bottom: 20px;
    }
    
    .invoice-box table tr.item td{
        border-bottom: 1px solid #eee;
    }
    
    .invoice-box table tr.item.last td {
        border-bottom: none;
    }
    
    .invoice-box table tr.total td:nth-child(2) {
        border-top: 2px solid #eee;
        font-weight: bold;
    }
    
    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td {
            width: 100%;
            display: block;
            text-align: center;
        }
        
        .invoice-box table tr.information table td {
            width: 100%;
            display: block;
            text-align: center;
        }
    }
    
    /** RTL **/
    .rtl {
        direction: rtl;
        font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }
    
    .rtl table {
        text-align: right;
    }
    
    .rtl table tr td:nth-child(2) {
        text-align: left;
    }

    .hed{
        text-align:center;
        background-color:#DC5113;
        color:white;
    }
    button{
        color:white;
        border: 2px solid #DC5113;
        background-color:#DC5113;
        padding:5px 20px;
        border-radius:20px;
    }
    button:hover{
        background-color:white;
        color:black;
    }
    input{
        border:2px solid #EF7F4D;
        border-top:none;
        border-right:none;
        border-left:none;
    }
    body{
        background-color:#DC5113;
    }
    </style>
</head>

<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">
                                <h1>{{user.schoolName}}</h1>
                            </td>
                            
                            <td>
                                <br>
                                Due Date: <span id="dueDate">{{user.dueDate}}</span><br>
                                Date: <span id="date"></span><br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                {{user.address}}
                            </td>
                            
                            <td>
                                Administration<br>
                                {{user.email}}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            
            <tr class="heading hed">
                <td colspan="2" class="hed">
                    Amount
                </td>
                
                <!-- <td>
                    Check #
                </td> -->
            </tr>
            
            <tr class="details">
                <td>
                   Total Outstanding
                </td>
                
                <td>
                    Rs. <span id="bill">{{user.bill}}</span>
                </td>
            </tr>
            
            
            
            <tr class="item">
                <td>
                   Amount you want to pay now
                </td>
                
                <td>
                   Rs. <span id="amount">{{amount}}</span> 
                </td>
            </tr>
            
            <tr class="item">
                <td>
                   Due Amount
                </td>
                
                <td>
                    Rs. <span id="dueAmount">0</span>
                </td>
            </tr>
            
            <!-- <tr class="item last">
                <td>
                    Domain name (1 year)
                </td>
                
                <td>
                    $10.00
                </td>
            </tr> -->
            <form action="/bill/paid" id="paymentForm" method="get">
            <input type="hidden" id="razorpay_payment_id" name="razorpay_payment_id">
            <input type="hidden" id="amountPaid" name="amountPaid">
            </form>
            
            <tr class="total">
                <td></td>
                
                <td>
                   <button id="rzp-button1">Pay Now</button><script src="https://checkout.razorpay.com/v1/checkout.js"></script>
                                  <script>var options = {    
                                        "key": "rzp_test_C6dbuYmIVuIDFB", // Enter the Key ID generated from the Dashboard
                                        "amount": "{{charges}}", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise    
                                        "currency": "INR",
                                        "name": "DevOfTech",
                                        "description": "Test Transaction",
                                        "image": "/assets/images/logo/two_w.png",
                                        "order_id": "{{order_id}}", //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                                        "handler": function (response){ 
                                          alert(response.razorpay_payment_id);
                                          document.getElementById("razorpay_payment_id").value = response.razorpay_payment_id
                                          document.getElementById('paymentForm').submit();
                                             },
                                          "prefill": { 
                                            "name": "{{user.name}}", 
                                            "email": "{{user.email}}",
                                            "contact": "{{user.contact}}"    },
                                            "notes": { 
                                              "developer_email": "harjotscs@gmail.com"    },
                                              "theme": {        "color": "#000000"    }};
                                              var rzp1 = new Razorpay(options);
                                              rzp1.on('payment.failed', function (response){ 
                                                alert(response.error.code);
                                                alert(response.error.description);
                                                alert(response.error.source);
                                                alert(response.error.step);
                                                alert(response.error.reason);
                                                alert(response.error.metadata.order_id);
                                                alert(response.error.metadata.payment_id);});
                                                document.getElementById('rzp-button1').onclick = function(e){ 
                                                     rzp1.open();    e.preventDefault();
                                                     }</script>
                </td>
            </tr>
        </table>
    </div>
    <script>
        let bill=document.querySelector('#bill')
        let amount=document.querySelector('#amount')
        let dueAmount=document.querySelector('#dueAmount')
        let date=document.querySelector('#date')
        let dueDate=document.querySelector('#dueDate')
        let amountPaid=document.querySelector('#amountPaid')
        let currentDate=new Date().toDateString()

        amountPaid.value=amount.innerHTML
        date.innerHTML=currentDate
        currentDate=new Date(dueDate.innerHTML)
        dueDate.innerHTML=currentDate.toDateString()
        bill.innerHTML=bill.innerHTML/100;
        dueAmount.innerHTML=bill.innerHTML-amount.innerHTML
    </script>
</body>
</html>
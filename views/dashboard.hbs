<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            font-family: "Lato", sans-serif;
        }
        
        .sidebar {
            margin: 0;
            padding: 0;
            width: 200px;
            background-color: #f1f1f1;
            position: fixed;
            height: 100%;
            overflow: auto;
        }
        
        .sidebar a {
            display: block;
            color: black;
            padding: 16px;
            text-decoration: none;
        }
        
        .sidebar a.active {
            background-color: #DC5113;
            color: white;
        }
        
        .sidebar a:hover:not(.active) {
            background-color: #555;
            color: white;
        }
        
        div.content {
            margin-left: 200px;
            padding: 1px 16px;
            height: 600px;
        }
        
        @media screen and (max-width: 700px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .sidebar a {
                float: left;
            }
            div.content {
                margin-left: 0;
            }
        }
        
        @media screen and (max-width: 400px) {
            .sidebar a {
                text-align: center;
                float: none;
            }
        }
        
        body {
            font-family: sans-serif;
            background-color: #DC5113;
        }
        
        .flex-container {
            display: flex;
            flex-wrap: nowrap;
            flex-direction: column;
            margin-top: 10%;
        }
        
        .flex-container>div {
            background-color: #f1f1f1;
            width: 90%;
            text-align: center;
            line-height: 45px;
            margin-top: 10px;
            font-size: 30px;
            margin-left: auto;
            margin-right: auto;
            display: block;
        }
        
        table {
            width: 100%;
        }
        
        td {
            text-align: left;
            font-size: 18px;
            font-weight: 600;
        }
        
        .pay {
            text-align: center;
            color: white;
            background: green;
        }
        
        @media screen and (max-width:800px) {
            table {
                width: 100%;
            }
            td {
                text-align: left;
                font-size: 12px;
            }
            .flex-container>div {
                width: 100%;
            }
            .contact {
                display: none;
            }
            .mail {
                display: none;
            }
        }
        
        .details {
            border: 4px solid white;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
        
        .flex-container {
            margin-top: 50px;
        }
        
        .date {
            background: #0080FF;
            text-align: center;
            color: white;
        }
    </style>
</head>

<body>

    <div class="sidebar" style=" box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <a class="active" href="#home">Recent Payments</a>
        <a href="#news">Website</a>
        <a href="/logout">Logout</a>
    </div>

    <div class="content">
        <h1 style="text-align: center; color:white;">Recent Payments</h1>
        <div class="flex-container">
            {{#each payments}}
            <div class="details">
                <table>
                    <tr>
                        {{#each paidBy}}
                        <td>{{schoolName}}</td>
                        <td class="mail">{{email}}</td>
                        <td class="contact">{{contact}}</td>
                        {{/each}}
                        <td class="date">{{paidOn}}</td>
                        <td class="pay">Rs. {{amountPaid}}</td>
                    </tr>
                </table>
            </div>
            {{/each}}

        </div>
    </div>
<script>
    let dates=document.querySelectorAll('.date')
    for(let date of dates){
        const d=new Date(date.innerHTML)
        date.innerHTML=d.toDateString()
    }
</script>
</body>

</html>